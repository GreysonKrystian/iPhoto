<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Color Static Resources-->
    <Color x:Key="BaseGreen">#3DBD1E</Color>
    <Color x:Key="LightGreen">#42C920</Color>
    <Color x:Key="DarkGreen">#36A31A</Color>
    <Color x:Key="DarkHighlightGreen">#257012</Color>
    <Color x:Key="PastelWhite">#E6E6E6</Color>

    <!--Default White Gradient-->
    <LinearGradientBrush x:Key="PastelWhiteGradient"
                         EndPoint="0.5,0"
                         StartPoint="0.5,1">
        <GradientStop Color="{StaticResource PastelWhite}" />
        <GradientStop Color="White"
                      Offset="1" />
    </LinearGradientBrush>

    <!--Dark to Green Gradient-->
    <LinearGradientBrush x:Key="DarkLightGreenGradient"
                         EndPoint="0.5,0"
                         StartPoint="0.5,1">
        <GradientStop Color="{StaticResource DarkGreen}" />
        <GradientStop Color="{StaticResource LightGreen}"
                      Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonHighlightGradient"
                         EndPoint="0.5,0"
                         StartPoint="0.5,1">
        <GradientStop Color="{StaticResource DarkHighlightGreen}" />
        <GradientStop Color="{StaticResource DarkGreen}"
                      Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>